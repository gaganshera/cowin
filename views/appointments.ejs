    <script type="application/javascript">
      var datatable;
      //socket connection
      var socket = io();
      socket.on("message", function (data) {
        if (data.availableCenters && data.availableCenters[0]) {
          const datatableData = prepareDatatableData(data.availableCenters);
          datatable.clear();
          datatable.rows.add(datatableData);
          datatable.draw();
        }
      });

      document.addEventListener(
        "DOMContentLoaded",
        function () {
          //initialise state dropdown
          document.getElementById("states").value = 9;
        },
        false
      );

      $(document).ready(function () {
        //initialise appointments datatable
        datatable = $("#appointments_table").DataTable();
      });

      //called when form is submitted
      function refreshAppointments(event, form) {
        event.preventDefault();
        let selectedDistricts = $(form).find(".district-check:checked").length;
        if (selectedDistricts == 0) {
          alert("Error! Select atleast 1 district");
          return;
        } else if (selectedDistricts > 13) {
          alert("Error! Cannot select more than 13 districts");
          return;
        }
        fetch("/appointments", {
          method: "post",
          body: new URLSearchParams(new FormData(form)),
        })
          .then((response) => response.json())
          .then(
            (data) => {
              if (data && data[0]) {
                const datatableData = prepareDatatableData(data);
                datatable.clear();
                datatable.rows.add(datatableData);
                datatable.draw();
              } else {
                alert("No slots available!");
                datatable.clear();
                datatable.draw();
              }
            },
            (error) => {
              console.log(error.message);
              alert("Error in getting appointments.");
            }
          );
      }

      //show districts as per states
      $("#states").change(function () {
        $(".districts").addClass("d-none");
        $(".district-check").prop("checked", false);
        $(`#district-${$(this).val()}`).removeClass("d-none");
      });

      //update datatable from fetch or socket
      function prepareDatatableData(availableCenters) {
        let datatableData = [];
        availableCenters.forEach((centerInfo) => {
          let fee = 0;
          if (
            centerInfo.center.fee_type === "Paid" &&
            Array.isArray(centerInfo.center.vaccine_fees)
          ) {
            fee = centerInfo.center.vaccine_fees.find(
              (data) => data.vaccine === centerInfo.session.vaccine
            ).fee;
          }
          datatableData.push([
            centerInfo.session.date,
            centerInfo.center.name,
            centerInfo.session.vaccine,
            centerInfo.center.district_name,
            centerInfo.center.pincode,
            centerInfo.session.min_age_limit,
            `Dose 1: ${centerInfo.session.available_capacity_dose1}, Dose 2: ${centerInfo.session.available_capacity_dose2}`,
            centerInfo.center.fee_type === "Paid" ? (fee ? fee : "Unknown") : "Free",
          ]);
        });
        return datatableData;
      }
    </script>
